<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgnote"
    tools:context="com.app.notapsavhll.appnotas.Datos.ActivityDatos">

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="625dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.611">


        <TextView
            android:id="@+id/text_titulo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_title1"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <EditText
            android:id="@+id/txt_titulo"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:ems="10"
            android:hint="@string/hint_titulo"
            android:inputType="text"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/txt_descrip"
            android:layout_width="fill_parent"
            android:layout_height="76dp"
            android:ems="10"
            android:hint="@string/hint_descri"
            android:inputType="text"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_titulo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_title2"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <EditText
            android:id="@+id/txt_fechCreacion"
            android:layout_width="fill_parent"
            android:layout_height="91dp"
            android:ems="10"
            android:hint="@string/hint_fecha_create"
            android:inputType="textEmailAddress"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_titulo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_title3"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txt_fecLimite"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/hint_fecha_limite"
                android:inputType="textPersonName"
                android:textSize="24sp" />

            <Button
                android:background="@drawable/bordes_redondos"
                android:textColor="@android:color/white"
                android:id="@+id/btn_date"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="2"
                android:text="@string/btnFecha"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txt_horaLimite"
                android:layout_width="fill_parent"
                android:layout_height="74dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/hint_hora_limite"
                android:inputType="number"
                android:textSize="24sp" />

            <Button
                android:background="@drawable/bordes_redondos"
                android:textColor="@android:color/white"
                android:id="@+id/btn_time"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_weight="2"
                android:text="HORA"
                android:textSize="18sp"
                tools:text="@string/btnHora" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/check_Checa"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:text="@string/check_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnguardar"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/bordes_redondos"
                android:onClick="btnIngresa_click"
                android:text="AGREGAR"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
